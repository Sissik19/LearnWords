<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="240dp"
        app:srcCompat="@mipmap/sheep_foreground"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="148dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is this ?"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="108dp" />

    <GridLayout
        android:layout_width="155dp"
        android:layout_height="154dp"
        android:columnCount="2"
        android:rowCount="3"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="388dp">

        <RadioButton
            android:id="@+id/word1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:checked="true"
            android:text="word1"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="285dp" />

        <RadioButton
            android:id="@+id/word2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="word2"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="348dp" />

        <RadioButton
            android:id="@+id/word3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="word3"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="415dp" />

        <Button
            android:id="@+id/sound1"
            android:layout_width="55dp"
            android:layout_height="49dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@android:drawable/ic_lock_silent_mode_off"
            android:backgroundTint="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/sound2"
            android:layout_width="55dp"
            android:layout_height="49dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@android:drawable/ic_lock_silent_mode_off"
            android:backgroundTint="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="275dp" />

        <Button
            android:id="@+id/sound3"
            android:layout_width="55dp"
            android:layout_height="49dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@android:drawable/ic_lock_silent_mode_off"
            android:backgroundTint="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="408dp" />

    </GridLayout>

    <ImageButton
        android:id="@+id/check"
        android:layout_width="75dp"
        android:layout_height="71dp"
        android:backgroundTint="@android:color/white"
        app:srcCompat="@mipmap/check_foreground"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="516dp" />

    <TextView
        android:id="@+id/sucess"
        android:layout_width="67dp"
        android:layout_height="48dp"
        android:text="1"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="62dp"
        android:layout_height="49dp"
        android:background="@android:drawable/btn_star_big_on"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="0dp" />

    <GridLayout
        android:layout_width="131dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/heart_foreground"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="7dp" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/heart_foreground" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:visibility="visible"
            app:srcCompat="@mipmap/heart_foreground"
            tools:layout_editor_absoluteX="158dp"
            tools:layout_editor_absoluteY="16dp" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>